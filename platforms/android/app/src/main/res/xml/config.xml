<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.stayFit" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>Stay Fit</name>
    <description>
        Check your Calories, proteins, fiber, carbs intakes. Calculate calories ideal weight and BMI.
    </description>
    <author email="adnan.damadzic@gmail.com" href="#">
        AD
    </author>
    <widget>
        <icon src="www/icon.png" />
        <icon density="ldpi" src="icon.png" />
    </widget>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
