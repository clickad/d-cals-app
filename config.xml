<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.stayFit" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Stay Fit</name>
    <description>
        Check your Calories, proteins, fiber, carbs intakes. Calculate calories ideal weight and BMI.
    </description>
    <author email="adnan.damadzic@gmail.com" href="#">
        AD
    </author>
    <widget>
        <icon src="www/icon.png" />
        <platform name="android">
            <icon src="icon.png" density="ldpi" />
        </platform>
    </widget>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
